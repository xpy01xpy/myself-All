.user-top{
  position: relative;
  width: 100%;
  height: 420rpx;
  background: url("http://r.photo.store.qq.com/psc?/V12oGHY212JNf9/TmEUgtj9EK6.7V8ajmQrEOTLyW.vDtQmVswbR*oDw3g*nWOpMqbgLA8AFdonJFCeg6GTBwEHDfuAKg4Hes033fhEL9QIr2ELWtqt2QqEYWo!/r");
  background-size: contain;
  z-index: 0;
}
.user-top::after{
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.1);
  z-index: 1;
}
.user-topcontent{
  z-index: 2;
  box-sizing: border-box;
  color: #ffffff;
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.user-avatarUrl{
  z-index: 3;
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  text-align: center;
  align-items: center;
  margin: 60rpx auto 20rpx;
}
.user-nickName{
  z-index: 3;
  text-align: center;
  width: 100%;
}